@model TrueReview2.ViewModels.BookViewModel



<h1>Add a Book</h1>
<br />
<br />
<form asp-controller="Book" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input class="form-control" asp-for="Author">
        <span asp-validation-for="Author"></span>
    </div>
    <div class="form-group">
        <label asp-for="Synopsis"></label>
        <textarea class="form-control" asp-for="Synopsis"></textarea>
        <span asp-validation-for="Synopsis"></span>
    </div>
    <div class="form-group">
        <label asp-for="ISBN"></label>
        <input class="form-control" asp-for="ISBN">   
        <span asp-validation-for="ISBN"></span>
    </div>
    <div class="form-group">
        <label asp-for="GenreName"></label>
        <select asp-for="GenreName" asp-items="Model.GenreNames" style="color:black"></select>
    </div>




    <input type="submit" value="Add Book" />

</form>