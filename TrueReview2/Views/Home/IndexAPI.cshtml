@model IEnumerable<TrueReview2.Models.GoodRead>

@{
    ViewData["Title"] = "IndexAPI";
}

<h2>IndexAPI</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ISBN)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GoodReadId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GoodReadId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GoodReadId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
