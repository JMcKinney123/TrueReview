

<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var profile in ViewBag.profiles)
    {
        <input type="checkbox" name="profileIds" id="@profile.ProfileId" value="@profile.ProfileId" />
        <label for="@profile.ProfileId">@profile.Title</label>
        <br />
    }

    <input type="submit" value="Remove Selected Profile(s)" />
</form>
