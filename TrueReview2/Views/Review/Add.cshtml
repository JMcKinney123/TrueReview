@model TrueReview2.ViewModels.AddReviewViewModel



<h1>Add a Book Review and Rating</h1>
<br />
<br />
<form asp-controller="Review" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookReview"></label>
        <textarea class="form-control" asp-for="BookReview"></textarea>
        <span asp-validation-for="BookReview"></span>
    </div>
    <div class="form-group">
        <label asp-for="RatingNumber"></label>
        <select class="form-control" asp-for="RatingNumber">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
        </select>
        <span asp-validation-for="RatingNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="GenreName"></label>
        <select asp-for="GenreName" asp-items="Model.GenreNames"></select>
    </div>




    <input type="submit" value="Add Review" />

</form>
